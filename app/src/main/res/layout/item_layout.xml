<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/yesterday"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:text="Yesterday"
        style="@style/bold_text_style"
        android:layout_marginTop="@dimen/dp15"
        android:layout_marginBottom="@dimen/dp10"
        android:textAppearance="@style/yesterday"
        android:lineSpacingExtra="-2sp"
        android:gravity="center" />

    <androidx.cardview.widget.CardView
            android:id="@+id/t_card_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp80"
            android:layout_gravity="center"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="23dp"
            app:cardCornerRadius="@dimen/dp10"
            app:cardElevation="@dimen/dp2"
            app:cardUseCompatPadding="true">
        <ImageView
            android:id="@+id/trash_btn"
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_marginTop="22dp"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="@dimen/dp14"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:src="@drawable/lock">
        </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/add_action"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/thomas_j_pe"
                        android:layout_width="137dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_alignParentTop="true"
                        android:text="Thomas J. Peacock"
                        android:textStyle="bold"
                        android:textAppearance="@style/thomas_j_pe"
                        android:lineSpacingExtra="-2sp"
                        android:gravity="top" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/first_name"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginLeft="15dp"
                            android:text="First Interest:"
                            android:textAppearance="@style/first_inter"
                            android:lineSpacingExtra="1sp"
                            android:textColor="#6F7373"
                            android:translationY="-0.52sp"
                            android:gravity="top" />

                        <TextView
                            android:id="@+id/first_inter"
                            android:layout_width="184dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="5dp"
                            android:text="Shopping"
                            android:textAppearance="@style/first_inter"
                            android:lineSpacingExtra="1sp"
                            android:textColor="#6F7373"
                            android:translationY="-0.52sp"
                            android:gravity="top" />
                </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</LinearLayout>
